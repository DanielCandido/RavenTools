{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "modeResolution": "bundler",
        "lib": [
            "esnext"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "outDir": "./dist",
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "types": [
            "reflect-metadata"
        ]
    },
    "include": [
        "src/**/*.ts",
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}